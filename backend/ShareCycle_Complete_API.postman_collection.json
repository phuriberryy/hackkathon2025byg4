{
  "info": {
    "_postman_id": "sharecycle-complete-api",
    "name": "ShareCycle Complete API",
    "description": "Complete API collection for ShareCycle (auth, items, exchange, chats)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test.user@cmu.ac.th\",\n  \"password\": \"password123\",\n  \"faculty\": \"Engineering\"\n}" },
            "url": { "raw": "{{base_url}}/api/auth/register", "host": ["{{base_url}}"], "path": ["api","auth","register"] }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"test.user@cmu.ac.th\",\n  \"password\": \"password123\"\n}" },
            "url": { "raw": "{{base_url}}/api/auth/login", "host": ["{{base_url}}"], "path": ["api","auth","login"] }
          }
        }
      ]
    },
    {
      "name": "Items",
      "item": [
        { "name": "Get All Items", "request": { "method": "GET", "url": { "raw": "{{base_url}}/api/items", "host": ["{{base_url}}"], "path": ["api","items"] } } },
        { "name": "Get Item By ID", "request": { "method": "GET", "url": { "raw": "{{base_url}}/api/items/{{item_id}}", "host": ["{{base_url}}"], "path": ["api","items","{{item_id}}"] } } },
        {
          "name": "Create Item",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{jwt_token}}" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"title\": \"Mountain Bike\",\n  \"category\": \"Sports\",\n  \"itemCondition\": \"Good\",\n  \"description\": \"Barely used\",\n  \"lookupLocation\": \"CMU\"\n}" },
            "url": { "raw": "{{base_url}}/api/items", "host": ["{{base_url}}"], "path": ["api","items"] }
          }
        }
      ]
    },
    {
      "name": "Exchange",
      "item": [
        {
          "name": "Create Exchange Request",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{jwt_token}}" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"itemId\": \"{{item_id}}\",\n  \"message\": \"Interested!\",\n  \"requesterItemName\": \"Skateboard\",\n  \"requesterItemCategory\": \"Sports\",\n  \"requesterItemCondition\": \"Good\"\n}" },
            "url": { "raw": "{{base_url}}/api/exchange", "host": ["{{base_url}}"], "path": ["api","exchange"] }
          }
        },
        { "name": "Get My Exchange Requests", "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{jwt_token}}" }], "url": { "raw": "{{base_url}}/api/exchange/my-requests", "host": ["{{base_url}}"], "path": ["api","exchange","my-requests"] } } }
      ]
    },
    {
      "name": "Chats",
      "item": [
        {
          "name": "Create Chat",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{jwt_token}}" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"participantId\": \"{{participant_id}}\",\n  \"itemId\": \"{{item_id}}\"\n}" },
            "url": { "raw": "{{base_url}}/api/chats", "host": ["{{base_url}}"], "path": ["api","chats"] }
          }
        },
        { "name": "Get All Chats", "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{jwt_token}}" }], "url": { "raw": "{{base_url}}/api/chats", "host": ["{{base_url}}"], "path": ["api","chats"] } } }
      ]
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://localhost:4000" },
    { "key": "jwt_token", "value": "" },
    { "key": "item_id", "value": "" },
    { "key": "participant_id", "value": "" }
  ]
}
